extends ../layout

block content

    div#signup
        div(id='message' class="#{msg_class}") #{message}

        form(action='/users', method='post')
            div
                label(for='name') Name
                input(id='name',type='text',value='',name='name')
            div
                label(for='username') Username
                input(id='username',type='text',value='',name='username')
            div
                label(for='email') Email
                input(id='email',type='text',value='',name='email')        
            div
                label(for='password') Password
                input(id='password',type='text',value='',name='password') 
            div
                label(for='avatar') Photo
                input(id='avatar',type='file',name='avatar')            
            div
                label(for='accesscode') Access Code
                input(id='accesscode',type='text',value='',name='accesscode')                                      
            div
                input(type='submit', value='Sign Up', id='submit')
